<view class="color">
  <view class="author_wrap">
    <view class="paiming">
      <view bindtap="zz" class="two">
        <view class="hg">
          <image src="../image/huangguan2.png"></image>
        </view>
        <image class="touxiang" src="../image/liu.png"></image>
        <view class="xh xx">2</view>
        <view class="name aa">余秋雨</view>
        <view class="fensi">5869 粉丝</view>
      </view>
      <view bindtap="zz" class="two">
        <view class="gh">
          <image src="../image/huangguan1.png"></image>
        </view>
        <image class="touxiang tou" src="../image/liu.png"></image>
        <view class="xh hx">1</view>
        <view class="name">刘慈心</view>
        <view class="fensi">6598 粉丝</view>
      </view>
      <view bindtap="zz" class="two">
        <view class="hg">
          <image src="../image/huangguan3.png"></image>
        </view>
        <image class="touxiang" src="../image/liu.png"></image>
        <view class="xh hh">3</view>
        <view class="name nn">田晓花</view>
        <view class="fensi">4526 粉丝</view>
      </view>
    </view>
    <view class="ranking">
      <view class="title">
        <text class="author">热门作者</text>
        <text class="all">查看全部 ></text>
      </view>
      <scroll-view class="scroll-view_H" scroll-x="true" style="width: 100%">
        <view class="a">
          <view wx:for="{{reactor}}" wx:key="*this" class="tuwen" bindtap="kh" data-liu="{{item.text}}">
            <image src="{{item.img}}"></image>
            <text>{{item.text}}</text>
            <view class="guanzhu">
              <text>{{item.guanzhu}}</text>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
    <view class="ranking">
      <view class="title">
        <text class="author">新晋作者</text>
        <text class="all">查看全部 ></text>
      </view>
      <scroll-view class="scroll-view_H" scroll-x="true" style="width: 100%">
        <view class="a">
          <view wx:for="{{newactor}}" wx:key="*this" class="tuwen" bindtap="kh" data-liu="{{item.text}}">
            <image src="{{item.img}}"></image>
            <text>{{item.text}}</text>
            <view class="guanzhu">
              <text>{{item.guanzhu}}</text>
            </view>
          </view>
        </view>
      </scroll-view>
    </view>
  </view>
</view>