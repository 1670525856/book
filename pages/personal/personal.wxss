/* pages/personal/personal.wxss */
@import "../image/iconfont.wxss";

.box{
  background-color: #21272e;
  padding: 0 48rpx 240rpx;
}
.top{
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 0;
  font-size: 36rpx;
}
.topleft{
  width: 16rpx;
}
.my{
  margin-top: 50rpx;
  position: relative;
  margin-bottom: 50rpx;
}
.myimg{
  width: 245rpx;
  height: 245rpx;
  border-radius: 50%;
  float: left;
  margin-right: 30rpx;
}

.my-right{
  float: left;
  margin-top: 35rpx;
}
.clearfix {
  overflow: auto;
  _height: 1%;
}
.name{
  font-size: 36rpx;
  color: #fff;
}
.dizhi{
  font-size: 28rpx;
  color: #b5b7c5;
  margin-top: 15rpx;
  padding-bottom: 30rpx;
  
}
.icon-fenxiang{
  color: #71768c;
  padding: 14rpx 40rpx;
  border: 3rpx solid #545d66;
  border-radius: 8rpx;
  box-sizing: border-box;
  position: absolute;
  right: 0;
}
.icon-fenxiang::before{
  margin-right: 15rpx;

}

.num{
  padding: 30rpx 60rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background-color: #2b323b;
  border-radius: 15rpx;
  margin-bottom: 90rpx;
}
.numlx{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-right: 75rpx;
  border-right: 1rpx solid #363c45;
}
.numlx:last-child{
  border: none;
  padding:0;
}
.mumsl{
  color: #fff;
  font-size: 32rpx;

}
.numlxx{
  font-size: 24rpx;
  color: #75808d;
}
.grxxbox{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx 0rpx;
  border-bottom:1rpx solid #333c47;
}
.gexx{
  font-size: 36rpx;
  color: #dcdeea;

}
.icon-zuo{
  color: #a2a8ba;
}

.xiaoxi{
  width: 26rpx;
  height: 26rpx;
  font-size: 24rpx;
  padding: 5rpx;
  background-color: #fb6894;
  border-radius: 50%;
  text-align: center;
  line-height: 26rpx;
  color: #e0cedf;
}
.yue{
  color: #fb6894;
  position: relative;
  padding-right: 45rpx;
}
.yue::before{
  position: absolute;
  right: 0;
  color: #a2a8ba;
}